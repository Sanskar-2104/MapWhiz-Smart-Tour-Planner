generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  trips     Trip[]
}

model Trip {
  id          String      @id @default(cuid())
  destination String
  startDate   DateTime
  endDate     DateTime
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  interests   String[]
  budget      Int?
  isPublic    Boolean     @default(false)
  userId     String
  publicId    String      @unique @default(uuid())
  sharedCount Int         @default(0)
  status      String      @default("generated")
  title       String
  days        DailyPlan[]
  user       User        @relation(fields: [userId], references: [id])
}

model DailyPlan {
  id        String    @id @default(cuid())
  tripId    String
  date      DateTime?
  createdAt DateTime  @default(now())
  dayIndex  Int
  notes     String?
  updatedAt DateTime  @updatedAt
  trip      Trip      @relation(fields: [tripId], references: [id])
  places    Place[]
}

model Place {
  id          String    @id @default(uuid())
  dailyPlanId String
  name        String
  category    String
  address     String
  description String?
  latitude    Float
  longitude   Float
  rating      Float?
  timeSlot    String?
  createdAt   DateTime  @default(now())
  endTime     String?
  order       Int
  startTime   String?
  dailyPlan   DailyPlan @relation(fields: [dailyPlanId], references: [id])
}

model CityCache {
  id          String   @id @default(cuid())
  destination String   @unique
  data        String
  createdAt   DateTime @default(now())
}
